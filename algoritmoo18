package main

import "fmt"

func main() {
	var num int
	fmt.Println("Digite um número entre 1 e 7:")
	fmt.Scan(&num)

	switch num {
	case 1:
		fmt.Printf("Domingo")
	case 2:
		fmt.Printf("Segunda-feira")
	case 3:
		fmt.Printf("Terça-feira")
	case 4:
		fmt.Printf("Quarta-feira")
	case 5:
		fmt.Printf("Quinta-feira")
	case 6:
		fmt.Printf("Sexta-feira")
	case 7:
		fmt.Printf("Sabado")
	default:
		fmt.Printf("Número inválido, digite um número entre 1 e 7:")
	}

}
